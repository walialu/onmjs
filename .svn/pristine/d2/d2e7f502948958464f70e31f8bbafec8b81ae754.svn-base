onmjs.utils.getTranslation = function(lang, key){

	if (lang === null) {
		lang = onmjs.utils.getBrowserInfo.getLanguage();
	}

	var ds = onmjs.internals.l18n;
	if ( typeof ds[lang] == 'undefined') {
		ds['en'];
	} else {
		ds = ds[lang];
	}

	keys = key.split('->');

	var ref = ds;

	for (var i=0;i<keys.length;i++) {
		ref = ref[keys[i]];
	}

	return ref;
};